{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div id="connexion">
        <form method="post">
            <h1>Connexion</h1>
            {% if app.user %}
                    <p>Vous êtes connecté en tant que : {{ app.user.userIdentifier }} <a href="{{ path('app_logout') }}">se déconnecter</a></p>
            {% endif %}
            <div class="block">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
            </div><br>
            <div class="block">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="flex">
                <button type="submit">Connexion</button>
            </div>
            {% if error %}
                <p class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            {% endif %}
        </form>
    </div>
{% endblock %}
